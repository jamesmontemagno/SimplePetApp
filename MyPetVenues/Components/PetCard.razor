@using MyPetVenues.Models

<div class="pet-card" @onclick="NavigateToPet">
    <div class="pet-image">
        <img src="@Pet.ImageUrl" alt="@Pet.Name" />
        <div class="pet-type">@GetPetTypeIcon(Pet.Type)</div>
    </div>
    <div class="pet-info">
        <h3 class="pet-name">@Pet.Name</h3>
        <p class="pet-breed">@Pet.Breed</p>
        <div class="pet-details">
            <span class="pet-age">ğŸ‚ @Pet.Age @(Pet.Age == 1 ? "year" : "years")</span>
            <span class="pet-size">ğŸ“ @Pet.Size</span>
        </div>
        <div class="pet-personality">
            @foreach (var trait in Pet.Personality.Take(3))
            {
                <span class="personality-badge">@trait</span>
            }
        </div>
    </div>
</div>

@code {
