<div class="star-rating" title="@Rating.ToString("0.0") out of 5 stars">
    @for (int i = 1; i <= 5; i++)
    {
        var starClass = GetStarClass(i);
        <span class="star @starClass">â˜…</span>
    }
    @if (ShowCount)
    {
        <span class="rating-count">(@Count)</span>
    }
</div>

@code {
    [Parameter]
    public double Rating { get; set; }
    
    [Parameter]
    public bool ShowCount { get; set; } = false;
    
    [Parameter]
    public int Count { get; set; }
    
    private string GetStarClass(int position)
    {
        if (Rating >= position)
            return "filled";
        else if (Rating >= position - 0.5)
            return "half-filled";
        else
            return "empty";
    }
}
