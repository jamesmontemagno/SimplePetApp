@inherits LayoutComponentBase

<div class="page">
    <header class="navbar">
        <div class="container">
            <div class="navbar-brand">
                <a href="/">🐾 PetFriendlyPlaces</a>
            </div>
            <nav class="navbar-menu">
                <a href="/">Home</a>
                <a href="#">Venues</a>
                <a href="#">Submit</a>
                <a href="#">Reviews</a>
                <a href="#">About</a>
            </nav>
            <div class="theme-toggle">
                <button @onclick="ToggleTheme" title="Toggle theme">
                    @(IsDarkMode ? "☀️" : "🌙")
                </button>
            </div>
        </div>
    </header>

    <main class="container">
        @Body
    </main>

    <footer>
        <div class="container">
            <div class="footer-grid">
                <div class="footer-section">
                    <h3>🐾 PetFriendlyPlaces</h3>
                    <p>Discover and share pet-friendly venues for your furry friends.</p>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="#">Venues</a></li>
                        <li><a href="#">Submit a Venue</a></li>
                        <li><a href="#">Reviews</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Community</h3>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Help</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Follow Us</h3>
                    <div class="social-icons">
                        <a href="#" aria-label="Facebook">📱</a>
                        <a href="#" aria-label="Twitter">🐦</a>
                        <a href="#" aria-label="Instagram">📷</a>
                        <a href="#" aria-label="Youtube">📺</a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year PetFriendlyPlaces. All rights reserved.</p>
            </div>
        </div>
    </footer>
</div>

@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

@code {
    private bool IsDarkMode { get; set; } = true;

    private async Task ToggleTheme()
    {
        IsDarkMode = await JSRuntime.InvokeAsync<bool>("themeToggle.toggle");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("themeToggle.initialize");
            IsDarkMode = await JSRuntime.InvokeAsync<bool>("themeToggle.isDarkMode");
            StateHasChanged();
        }
    }
}
